#!/bin/sh
ENDECA_USER=<%= node[:endeca][:user] %>
INSTALLER_SH=<%= node[:endeca][:installation_dir] %>/endeca/Workbench/workspace/setup/installer_sh.ini
# We want to use installer_sh.ini variables in this script,
# so we source it here
source $INSTALLER_SH
# change to user endeca
su $ENDECA_USER -c "/bin/sh -c \"source $INSTALLER_SH; \
exec env USER=$ENDECA_USER \
$ENDECA_TOOLS_ROOT/server/bin/endeca_run.sh\""